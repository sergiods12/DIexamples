<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagesDemo.TabbedPageDemo"
             Title="TabbedPageDemo"
            BarBackgroundColor="Beige"
            BarTextColor="Coral"
            SelectedTabColor="DarkOrchid"
            >
    
    <ContentPage Title="Pagina 1" IconImageSource="dotnet_bot.png">
        <VerticalStackLayout>
            <Image Source="dotnet_bot.png" WidthRequest="50" HeightRequest="50"/>
        </VerticalStackLayout>
    </ContentPage>

    <ContentPage Title="Pagina 2" IconImageSource="dotnet_bot.png">
        <Label Text="Pagina 2" />
    </ContentPage>

    <ContentPage Title="Pagina 3" IconImageSource="dotnet_bot.png">
        <Label Text="Pagina 3" />
    </ContentPage>
    
</TabbedPage>